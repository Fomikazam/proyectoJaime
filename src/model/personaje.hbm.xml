<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="clases.Personaje" table="personajes">
		<id name="id" type="int">
			<column name="id" />
		</id>
		<property name="nombre" type="string">
			<column name="nombre" length="20" not-null="true" />
		</property>
		<property name="rareza" type="int">
			<column name="rareza" length="1" not-null="true" />
		</property>
		<property name="elemento" type="string">
			<column name="elemento" length="10" not-null="true" />
		</property>		
		<many-to-one name="arma" column="idArma"
			not-null="true" />
		
	</class>

</hibernate-mapping>